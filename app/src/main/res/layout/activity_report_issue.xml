<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sp4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp">

        <!-- Screen Title -->
        <TextView
            android:text="Report an Issue"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Image Preview -->
        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:src="@drawable/camera"
            android:layout_marginBottom="8dp"/>

        <!-- Pick Image Button -->
        <Button
            android:id="@+id/btnPickImage"
            android:text="Pick Issue Image"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/blue"
            android:layout_height="wrap_content"/>

        <!-- Issue Type Label -->
        <TextView
            android:text="Issue Type"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Issue Type Input -->
        <EditText
            android:id="@+id/edtType"
            android:hint="Auto detected or enter manually"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Get Location Button -->
        <Button
            android:id="@+id/btnGetLocation"
            android:text="ðŸ“ Get My Location"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Location Display -->
        <TextView
            android:id="@+id/txtLocation"
            android:text="Location not selected"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:text="Submit Issue"
            android:textAllCaps="false"
            android:backgroundTint="#34A853"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
